.body-back
  .phone-box.wrap.push
    .menu-notify
      .profile-left
        %a{:href => root_path}
          %i.fa.fa-chevron-left
      .Profile-mid
        %h5.pro-link Aplicaciones
      .clearfix
    .details-grid
      .details-shade
        .col-md-6.details-left
          %img.img-circle.border-effect{:alt => " ", :src => @app.avatar(:thumb)}/
        .col-md-6.details-right
          %h3=@app.name
          %h4 Imprescindibles
          %a.btn.btn-info{:href => @app.download_url, target: "_blank"} Descargar
          - if current_user.is_admin?
            %a.btn.btn-warning{:href => edit_app_path(@app), target: "_blank"} Editar
          .clearfix
        .clearfix
    .col-md-12.app-info-open
      %h3 Descripci√≥n
      = @app.description.html_safe
      .clearfix
    .clearfix
